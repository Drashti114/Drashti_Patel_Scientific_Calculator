<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idTVSecondary"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/idTVPrimary"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/idTVSecondary"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="50sp"
        tools:ignore="RtlCompat" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/idTVPrimary"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/white">


            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/ac"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/c"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/ob"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="("
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/cb"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text=")"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="@color/white">

            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/sin"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="sin"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cos"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="cos"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/tan"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="tan"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/log"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="log"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/ln"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="ln"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="@color/white">

            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/fact"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="x!"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/squaree"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="x^2"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/root"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="√"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/inv"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="1/x"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/div"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/white">


            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/seven"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/eight"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/nine"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/mult"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="×"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/white">


            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/four"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/five"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/six"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/minus"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/white">


            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/one"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/two"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/three"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/plus"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/white">


            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/pi"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="π"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/zero"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/dot"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="."
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <Button
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/equal"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/purple_200"
                android:padding="6dp"
                android:text="="
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>